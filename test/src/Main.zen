public fun void RunGame()
{
    let int screenWidth = 800;
    let int screenHeight = 450;

    var Raylib::Vector2 position = Raylib::Vector2(640, 320);
    let Raylib::Vector2 size = Raylib::Vector2(64, 64);

    Raylib::InitWindow(screenWidth, screenHeight, "raylib [core] example - basic window");
    // Raylib::SetTargetFPS(60);

    while (!Raylib::WindowShouldClose())
	{
		Raylib::BeginDrawing();
        {
            Raylib::ClearBackground(Raylib::Color(245, 245, 245, 255));
            Raylib::DrawText("Hello from Zen!", 190, 200, 20, Raylib::Color(140, 140, 140, 255));
            
            Raylib::DrawRectangleV(Raylib::Vector2(position.x, position.y), size, Raylib::Color(0, 0, 0, 255));

            position = Raylib::GetMousePosition();
            // position.x = 32;
            position.x = position.x + -40 * Raylib::GetFrameTimeeee();

            /*
            if (Raylib::IsMouseButtonDown(0)) {
                position.y = 0;
            } else {
                position.y = 320;
            }
            */
        }
        Raylib::EndDrawing();
	}

    Raylib::CloseWindow();
}