using System;

namespace Sandbox;

public const double PI = 3.14159265358979323846;

public fun void Main()
{
	// Console::WriteLine("Hello, Sailor!");
	// Console::TestMessageBox("Hello, World!", "Title");

	RunGame();
}

public fun void RunGame()
{
    let int screenWidth = 800;
    let int screenHeight = 450;

    var float x = 640;
    var Raylib::Vector2 position = Raylib::Vector2(640, 360);

    Raylib::InitWindow(screenWidth, screenHeight, "raylib [core] example - basic window");
    Raylib::SetTargetFPS(60);

    while (!Raylib::WindowShouldClose())
	{
		Raylib::BeginDrawing();
        {
            Raylib::ClearBackground(Raylib::Color(245, 245, 245, 255));
            Raylib::DrawText("Hello from Zen!", 190, 200, 20, Raylib::Color(140, 140, 140, 255));
            
            Raylib::DrawRectangleV(Raylib::Vector2(position.x, 320), Raylib::Vector2(64, 64), Raylib::Color(0, 0, 0, 255));

            if (Raylib::IsMouseButtonDown(0))
            {
                x = x + 1;
            }
            else
            {
                x = x - 1;
            }
        }
        Raylib::EndDrawing();
	}

    Raylib::CloseWindow();
}